<%= provide(:title, t("new_report")) %>
<div id="content">
  <%= render "layouts/toggle_sidebar" %>
  <% if logged_in? %>
  <%= form_for(@report) do |f| %>
  <%= render "shared/error_messages", object: @report %>
  <div class="card-deck">
    <div class="card-body">
      <h5 class="card-title"><%= t("new_report") %></h5>
      <p class="card-text">
        <div class="row">
          <div class="col-md-3 col-lg-3">
            <div class="col-md-9 col-lg-9">
              <%= f.text_area :content, size: Settings.content.size, placeholder: t("create_report") %>
              <%= f.date_field :reported_at, class: "form-control", size: Settings.text_field.size %>
              <%= f.submit t("create"), class: "btn btn-primary" %>
            </div>
          </div>
        </p>
      </div>
      <% end %>
    </div>
    <% else %>
    <div><h1><%= t("nothing") %></h1></div>
    <% end %>
